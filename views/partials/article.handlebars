<div class="card">
  <div class="card-header article-title text-white bg-info">
    <h3 class="card-title" id="art-title-{{id}}">{{title}}</h3>
    <a href="/save/{{id}}" class="btn">Save this Article</a>
  </div>
  <div class="card-body article-summary">
    <p class="card-text" id="art-sum-{{id}}">{{summary}}</p>
  </div>
</div>
